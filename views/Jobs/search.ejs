<% layout("layouts/boilerplate.ejs") %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" crossorigin>
<div class="row mb-4">
        <div class="col-6">
            <select class="form-select form-select-lg w-50 ms-auto" form="JobTitle" name="location">
            <option disabled selected hidden>Şəhər</option>
            <% for(let city of cities){ %> 
            <option value="<%=city.city%>"><%=city.city%></option>
            <% } %> 
            </select>
        </div>    
        <div class="col-6">
            <select class="form-select form-select-lg w-50 me-auto" form="JobTitle" name="position">
            <option disabled selected hidden >Kategoriya</option>
            <% for(let position of positions){ %> 
            <option value="<%=position.position%>"><%=position.position%></option>
            <% } %> 
            </select>
        </div>
        <div class="col-6 mt-3">
            <select class="form-select form-select-lg w-50 ms-auto" form="JobTitle" name="education">
            <option disabled selected hidden >Təhsil</option>
            <% for(let education of educations){ %> 
            <option value="<%=education.education%>"><%=education.education%></option>
            <% } %> 
            </select>
        </div>
        <div class="col-6 mt-3">
            <select class="form-select form-select-lg w-50 me-auto" form="JobTitle" name="experience">
            <option disabled selected hidden >Təcrübə</option>
            <% for(let experience of experiences){ %> 
            <option value="<%=experience.experience%>"><%=experience.experience%></option>
            <% } %> 
            </select>
        </div>
        <div class="row">
            <div class="col-6 offset-3 mt-2">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="Part-time" name="time[]" form="JobTitle">
                    <label class="form-check-label" for="inlineCheckbox1">Part-Time</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="Full-time" name="time[]" form="JobTitle">
                    <label class="form-check-label" for="inlineCheckbox2">Full-Time</label>
                </div>
            </div>
        </div>
        <form action="/search" class="text-center mt-4" id="JobTitle" method="post">
        <button type="submit" id="cmon" class="btn btn-success">Göndər</button>
        </form>
</div>
<hr class="w-50 m-auto mb-4">
<div class="row d-flex">
    <% for(let job of foundJobs){ %>
    <div class="col-12 col-md-4 mb-3">
        <div class="card border-primary p-3 mb-3 text-center">
            <h5 class="card-Title"><a class="nav-link" href="/show/<%=job._id%>"><%=job.subPosition %></a></h5>
            <h6 class="card-title"><i class="bi bi-building"></i> <%=job.compName%></h6>
            <p class="card-text text-danger mb-1"><i class="bi bi-cash-stack"></i> <%=job.pay%></p>
            <p class="card-text mb-1">
                <small class="text-muted"><i class="bi bi-geo-alt"></i> <%=job.location%></small>
            </p>
            <p class="card-text"><%=job.time%></p>
            <button class="btn btn-warning w-50 m-auto"><a class="nav-link" href="/show/<%=job._id%>">Ətraflı</a></button>
        </div>
    </div>
    <% } %> 
</div>