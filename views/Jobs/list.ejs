<% layout("layouts/boilerplate.ejs") %> 
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" crossorigin>
<div class="row mb-2">
    <div class="col-10 offset-1 d-flex">
        <h4 class="text-muted me-auto"><%=loc%> / <%=pos%> / <%=pf%> / <%=ed%> / <%=exp%></h4>
        <button class="btn btn-success ms-auto mb-2"><a href="/search" class="nav-link">Geri dön</a></button>
    </div>
    <hr class="col-10 offset-1">
</div>

<div class="row d-flex">
    <% for(let job of foundJobs){ %>
    <div class="col-12 col-md-4 mb-3">
        <div class="card border-primary p-3 mb-3 text-center">
            <h5 class="card-Title"><a class="nav-link" href="/show/<%=job._id%>"><%= job.subPosition %></a></h5>
            <h6 class="card-title"><i class="bi bi-building"></i> <%=job.compName%></h6>
            <p class="card-text text-danger mb-1"><i class="bi bi-cash-stack"></i> <%=job.pay%></p>
            <p class="card-text mb-1">
                <small class="text-muted"><i class="bi bi-geo-alt"></i> <%=job.location%></small>
            </p>
            <p class="card-text"><%=job.time%></p>
            <button class="btn btn-warning w-50 m-auto"><a class="nav-link" href="/show/<%=job._id%>">Ətraflı</a></button>
        </div>
    </div>
    <% } %> 
</div>