<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" crossorigin>
<div class="row">
    <div class="col-12">
        <div class="card mb-3">
            <div class="card-header text-center mb-1">
                <h2><%=employee.fullname%></h2>
                <form action="/logout" method="post">
                    <button class="btn btn-danger">Logout</button>
                </form>
            </div>
            <div class="card-body text-center">
                    <li><%=employee.email%></li>
                    <li><%=employee.gender%></li>
                    <li class="mb-2"><%=employee.age%></li>
                <button class="btn btn-primary"><a class="nav-link" href="/employee/<%=employee._id%>/edit">Profili Redaktə Et</a></button>
                <hr>
                <iframe src="data:application/pdf;base64,<%=pdf%>" width="100%" height="800px"></iframe>
                <button class="btn btn-primary text-center"><a href="/search" class="nav-link">İş Axtar!</a></button>
            </div>
            <% if(!employee.verified){ %>
            <form  action="/verify/<%=employee._id%>" method="post" class="mx-auto mb-3">
                <label for="email" class="form-label">E-poçtunuzu doğrulayın: <%=employee.email%></label>
                <button class="btn btn-warning ms-2 text-white">Doğrula</button>
            </form>
            <% } else{ %>
                <label for="email" class="form-label mx-auto mb-3">Doğrulanmış e-poçt: <%=employee.email%> <i class="bi bi-check2-circle text-success"></i></label>
            <% } %>
        </div>
    </div>
</div>