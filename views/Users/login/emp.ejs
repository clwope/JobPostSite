<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-6 offset-3">
        <h1 class="display-5 text-primary text-center">Login as Employee</h1>
        <hr class="text-primary">
        <form action="/login/emp" method="post" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="email" name="email" id="email" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" name="password" id="password" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="col-12 d-flex">
                <button class="btn btn-primary me-auto">Login</button>
                <button class="btn btn-danger ms-auto"><a href="/pwchange" class="nav-link">Forgot my password</a></button>
            </div>
        </form>
    </div>
</div> 